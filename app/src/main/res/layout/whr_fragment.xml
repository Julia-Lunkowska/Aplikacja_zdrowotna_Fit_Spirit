<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WHR_fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="20"
            android:text="@string/text_description_whr" />

        <TextView
            android:id="@+id/text_your_WHR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/calculate_WHR"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="32dp" />

        <TextView
            android:id="@+id/text_waist_whr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/waist"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/edit_waist_whr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#f0f0f0"
            android:ems="10"
            android:hint="@string/enter_waist"
            android:inputType="number"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="47dp" />

        <TextView
            android:id="@+id/text_hip_whr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:text="@string/hip"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="129dp" />

        <EditText
            android:id="@+id/edit_hip_whr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#f0f0f0"
            android:ems="10"
            android:hint="@string/enter_hip"
            android:inputType="number"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="101dp" />

        <TextView
            android:id="@+id/text_whr_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_sex" />

        <RadioGroup
            android:id="@+id/radioGroup_whr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">

            <RadioButton
                android:id="@+id/radioButton_whr_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/man" />

            <RadioButton
                android:id="@+id/radioButton_whr_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:text="@string/woman" />

        </RadioGroup>

        <Button
            android:id="@+id/button_calculate_whr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:text="@string/calculate" />

        <TextView
            android:id="@+id/text_show_whr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="5"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>